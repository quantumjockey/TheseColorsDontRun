<UserControl x:Class="TheseColorsDontRun.View.Workspaces.Components.WideVerticalRamp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Slider Background="{Binding Path=Brush, UpdateSourceTrigger=PropertyChanged}" 
                    Orientation="Vertical" 
                    Margin="2" Value="{Binding Path=Offset, UpdateSourceTrigger=PropertyChanged}">
        <Slider.LayoutTransform>
            <ScaleTransform ScaleX="4"/>
        </Slider.LayoutTransform>
    </Slider>
</UserControl>
