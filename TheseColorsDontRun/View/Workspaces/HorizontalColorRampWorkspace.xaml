<UserControl x:Class="TheseColorsDontRun.View.Workspaces.HorizontalColorRampWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White" BorderBrush="Gray" BorderThickness="2" Width="400">
        <Slider Background="{Binding Path=Brush, UpdateSourceTrigger=PropertyChanged}" 
                Margin="2" 
                Orientation="Horizontal" 
                Value="{Binding Path=Offset, UpdateSourceTrigger=PropertyChanged}">
        </Slider>
    </Border>
</UserControl>
