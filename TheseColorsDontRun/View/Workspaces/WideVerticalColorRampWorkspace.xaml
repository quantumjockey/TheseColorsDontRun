<UserControl x:Class="TheseColorsDontRun.View.Workspaces.WideVerticalColorRampWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White" BorderBrush="Gray" BorderThickness="2" Height="400">
        <Slider Background="{Binding Path=Brush, UpdateSourceTrigger=PropertyChanged}" 
                    Orientation="Vertical" 
                    Margin="2" Value="{Binding Path=Offset, UpdateSourceTrigger=PropertyChanged}">
            <Slider.LayoutTransform>
                <ScaleTransform ScaleX="4"/>
            </Slider.LayoutTransform>
        </Slider>
    </Border>
</UserControl>
